<!-- views/authors.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authors List</title>
</head>
<body>
    <h1>Authors List</h1>
    <%- include ('partials/navigation') %>
    <% if (authors.length === 0) { %>
        <p>No authors has been found</p>
    <% } else { %>
        <ul>
            <% authors.forEach(author => { %>
                <li><%= author.name %></li>
            <% }); %>
        </ul>
    <% } %>
</body>
</html>
